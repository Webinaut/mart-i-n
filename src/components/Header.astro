---
import Header_background from "../images/blobs-01.svg";
import Herobackground from "../images/undraw_code-thinking_0vf2.svg";
---

<main class="section-wrapper">
  <div class="hbackground">
    <Header_background />
  </div>
  <div class="hero">
    <section class="hero-content">
      <h1 class="logo">Mart.I.N</h1>
      <nav>
        <ul>
          <li>
            <a href="#about">Why</a>
          </li>
          <li>
            <a href="#portfolio">Organisations</a>
          </li>
          <li>
            <a href="#faq">FAQ</a>
          </li>
          <li>
            <a href="#contact">Contact</a>
          </li>
        </ul>
      </nav>
      <button class="round" id="button-open"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="100%"
          height="100%"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-menu"
          ><line x1="3" y1="12" x2="21" y2="12"></line><line
            x1="3"
            y1="6"
            x2="21"
            y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg
        ></button
      >
    </section>
    <section>
      <div class="mobile-menu-wrapper" id="mobileMenu" style="">
        <button class="round" id="button-close"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="100%"
            height="100%"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-x"
            ><line x1="18" y1="6" x2="6" y2="18"></line><line
              x1="6"
              y1="6"
              x2="18"
              y2="18"></line></svg
          ></button
        >
        <ul>
          <li>
            <a href="#about" class="menu-link"><h1>Why</h1></a>
          </li>
          <li>
            <a href="#portfolio" class="menu-link"><h1>Organisations</h1></a>
          </li>
          <li>
            <a href="#faq" class="menu-link"><h1>FAQ</h1></a>
          </li>
          <li>
            <a href="#contact" class="menu-link"><h1>Contact</h1></a>
          </li>
        </ul>
      </div>
    </section>
    <section class="section-content hero">
      <div class="section-wrapper">
        <h1 class="herohead">
          <span style="color:var(--pure-accent-grey);">
            Revitalise
            <br /></span
          >
          <span style="color:var(--pure-secondary);">your website</span>
        </h1>
        <p>
          Revitalising your website is essential for maintaining relevance and
          competitiveness in today's fast-paced digital world. A refresh allows
          you to adopt modern design principles, ensuring your site is fully
          responsive and delivers a seamless user experience across all devices.
        </p>
        <button class="mart-button-1">Learn how</button>
      </div>
      <div class="image-wrapper"></div>
    </section>
  </div>
  <style lang="scss" define:vars={{ hbackground: `url(${Herobackground.src})` }}
  >
    .hbackground {
      top: 0px;
      left: 0px;
      position: absolute;
      width: 100%;
      z-index: -1;
    }
    .hero {
      z-index: 2;
    }
    .section-content {
      display: flex;
      width: 80%;
      margin: auto;
    }
    .section-wrapper {
      width: 100%;
      margin: 0 40px 0 0;
      padding: 0;
      padding-bottom: 40px;
      display: block;
    }

    element.style {
    }

    button.round {
      border-radius: 9999px;
      min-width: 200px;
      background: var(--pure-primary);
      color: var(--pure-neutral-light);
      box-shadow: 0px 3px 7px 0px rgba(0, 0, 0, 0.35);
      border: none;
      padding: 7px;
      margin: 0;
      width: 48px;
      min-width: 48px;
      height: 48px;
      margin-top: 10px;
      display: flex;
      justify-content: center;
      align-items: center;
      display: none;
    }
    .mobile-menu-wrapper {
      display: none;
    }
    button.mart-button-1 {
      border-radius: 9999px;
      padding: 15px;
      min-width: 200px;
      background: var(--pure-primary);
      color: var(--pure-neutral-light);
      box-shadow: 0px 3px 7px 0px rgba(0, 0, 0, 0.35);
      border: none;
      font-family: "Playfair Display", serif;
      font-weight: 400;
      font-style: italic;
      margin-top: 40px;
    }
    .image-wrapper {
      margin: 0 40px 0 0;
      align-self: flex-start;
      width: 100%;
      height: 400px;
      max-height: 400px;
      min-width: 300px;
      background-image: var(--hbackground);
      background-size: contain;
      background-position: right;
      background-repeat: no-repeat;
    }
    .hero-content {
      display: flex;
      justify-content: space-between;
      align-items: top;
      width: 80%;
      margin: auto;
      margin-top: 60px;
    }
    h1.logo {
      display: flex;
      margin-top: 0;
      font-family: "Montserrat", sans-serif;
      color: var(--pure-primary);
      font-weight: 700;
    }
    .herohead {
      font-weight: 600;
      font-size: 3.5rem;
    }
    nav {
      & ul {
        display: flex;
        justify-content: space-between;
        width: 30%;
        min-width: 300px;
        list-style-type: none;
        & li a {
          color: var(--pure-neutral-dark);
          text-decoration: none;
          font-weight: 600;
          &:hover {
            color: var(--pure-accent-teal);
            text-decoration: underline;
          }
        }
      }
    }
    @media (max-width: 768px) {
      .image-wrapper {
        display: none;
      }
      h1.logo {
        font-size: 1.8em;
      }
      .herohead {
        font-size: 2.4em;
      }
      .section-wrapper {
        margin: 0;
      }
      nav {
        display: none;
      }
      button.round {
        display: flex;
      }
      #mobileMenu {
        display: none;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100vw;
        position: absolute;
        top: 0;
        left: 0;
        background: var(--pure-accent-teal);
        z-index: 3;
        &.open {
          display: flex;
        }
        & h1 {
          font-size: 2.1em;
        }
        & ul {
          list-style-type: none;
          padding-left: 0.5em;
          & li a {
            color: var(--pure-neutral-light);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.4em;
            &:hover {
              color: var(--pure-primary);
            }
          }
        }
      }
    }
  </style>
</main>
