<main class="section-wrapper" id="contact">
  <section class="section-content">
    <div class="headline-wrapper headline2">
      <h1>
        Get in touch
        <br />
        <span class="light">to get started</span>
      </h1>
    </div>
    <form
      name="contact"
      method="POST"
      netlify-honeypot="bot-field"
      data-netlify="true"
      data-astro-reload
      novalidate
    >
      <p class="hidden">
        <label>
          Don’t fill this out if you’re human: <input name="bot-field" />
        </label>
      </p>
      <input
        type="hidden"
        name="subject"
        data-remove-prefix
        value="Contact Form from mart-i-n.com.au"
      />
      <div class="text-input-wrapper">
        <div class="pure-g">
          <div class="pure-u-md-1-3">
            <p class="form-text">
              Full name
              <span class="light">*</span>
            </p>
            <input
              placeholder="First and last name"
              name="name"
              required
              type="text"
              class=""
            />
          </div>
          <div class="pure-u-md-1-3">
            <p class="form-text">
              Email
              <span class="light">*</span>
            </p>
            <input
              placeholder="Email address"
              type="email"
              name="email"
              required
              class=""
            />
          </div>
          <div class="pure-u-md-1-3">
            <p class="form-text">Phone</p>
            <input
              placeholder="1234 567 890"
              type="tel"
              name="phone"
              pattern="[0-9]{4} [0-9]{3} [0-9]{3}"
            />
          </div>
          <div class="pure-u-md-1-2">
            <label>
              <p>Message:</p>
              <textarea name="message" class="message" rows="2"></textarea>
            </label>
          </div>
          <div class="pure-u-md-1-2">
            <p><br /></p>
            <div data-netlify-recaptcha="true"></div>
          </div>
        </div>
        <button type="submit" class="">Send</button>
      </div>
    </form>
  </section>

  <style>
    .section-wrapper {
      padding-bottom: 100px;
    }
    .section-content {
      width: 80%;
      margin: auto;
    }
    .headline-wrapper {
      display: flex;
      margin-bottom: 1em;
      margin-top: -5px;
      padding-top: 2em;
      /* opacity: 0; */
      transition: all 0.5s;
      & h1 {
        font-weight: 700;
        font-size: 4em;
        font-style: normal;
        line-height: 1.4em;
      }
    }
    .light {
      color: var(--pure-accent-teal);
    }
    input,
    .message,
    .recaptcha {
      width: 80%;
      border: none;
      border-radius: 10px;
      background: white;
      opacity: 0.7;
      font-size: 1em;
      padding: 20px;
      font-weight: 400;
      font-style: normal;
      &:focus {
        outline: none;
      }
    }

    button {
      background: var(--pure-accent-teal);
      color: var(--pure-neutral-light);
      box-shadow: 0px 3px 7px 0px rgba(0, 0, 0, 0.35);
      border: none;
      font-family: "Playfair Display", serif;
      font-weight: 400;
      font-style: italic;
      padding: 15px;
      min-width: 200px;
      width: 40%;
      align-self: flex-end;
      border-radius: 9999px;
      min-width: 200px;
      margin-top: 40px;
    }
    .hidden {
      display: none;
    }
  </style>
</main>
