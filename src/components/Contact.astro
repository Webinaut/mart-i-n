<main class="section-wrapper" id="contact">
  <section class="section-content">
    <div class="headline-wrapper headline2 in-view">
      <h1>
        Get in touch
        <br />
        <span class="light">to get started</span>
      </h1>
    </div>
    <form class="contact-form" novalidate="">
      <div class="text-input-wrapper">
        <div class="pure-g">
          <div class="pure-u-md-1-3">
            <p class="form-text">
              Full name
              <span class="light">*</span>
            </p>
            <input placeholder="First and last name" type="text" class="" />
          </div>
          <div class="pure-u-md-1-3">
            <p class="form-text">
              Email
              <span class="light">*</span>
            </p>
            <input placeholder="Email address" type="email" class="" />
          </div>
          <div class="pure-u-md-1-3">
            <p class="form-text">Phone</p>
            <input placeholder="123 456 78" type="tel" class="valid" />
          </div>
        </div>
      </div>
      <button type="submit" class="">Send</button>
    </form>
  </section>
</main>

<style>
  .section-content {
    width: 80%;
    margin: auto;
  }
  .headline-wrapper {
    display: flex;
    margin-bottom: 120px;
    margin-top: -5px;
    padding-top: 2em;
    /* opacity: 0; */
    transition: all 0.5s;
    & h1 {
      font-weight: 700;
      font-size: 4em;
      font-style: normal;
      line-height: 1.4em;
    }
  }
  .light {
    color: var(--pure-accent-teal);
  }
</style>
